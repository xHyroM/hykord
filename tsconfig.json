{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["es2019", "DOM"],
    "jsxFactory": "Hykord.Webpack.Common.React.createElement",
    "jsxFragmentFactory": "Hykord.Webpack.Common.React.Fragment",
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@common": ["./src/common/index.ts"],
      "@patcher": ["./src/renderer/patcher/index.ts"],
      "@loader/*": ["./src/renderer/loaders/*"],
      "@hykord/*": ["./src/renderer/modules/*"]
    },
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "typeRoots": ["./packages/types/src/global.d.ts"]
  },
  "include": ["./src/**/*"]
}
