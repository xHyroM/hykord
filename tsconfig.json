{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["es2019", "DOM"],
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@common": ["./src/common/index.ts"],
      "@patcher": ["./src/renderer/patcher/index.ts"],
      "@hykord/*": ["./src/renderer/modules/*"],
      "@types": ["./src/types.ts"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*"]
}
