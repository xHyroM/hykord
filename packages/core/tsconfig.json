{
    "compilerOptions": {
        "rootDir": "src",
        "rootDirs": ["src", "dist"],
        "outDir": "dist",
        "esModuleInterop": true,
        "allowJs": true,
        "target": "ES2020",
        "lib": ["ESNext", "DOM"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "baseUrl": ".",
        "jsx": "react",
        "removeComments": true,
        "paths": {
            "@hykord/*": ["./src/renderer/api/modules/*", "./dist/renderer/api/modules/*"],
            "@dependency/*": ["./src/dependencies/*", "./dist/dependencies/*"],
            "@api/*": ["./src/renderer/api/*", "./dist/renderer/api/*"],
            "@ipc/*": ["./src/renderer/ipc/*", "./dist/renderer/ipc/*"],
            "@main": ["./src/renderer/index", "./dist/renderer/index"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths",
                "useRootDirs": true
            }
        ],
        "typeRoots": ["src/types", "node_modules/@types"]
    }
}