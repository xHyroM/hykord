{
    "compilerOptions": {
        "rootDir": "src",
        "rootDirs": ["src", "dist"],
        "outDir": "dist",
        "esModuleInterop": true,
        "allowJs": true,
        "target": "ES2020",
        "lib": ["ESNext", "DOM"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "baseUrl": ".",
        "jsx": "react",
        "removeComments": true,
        "paths": {
            "@hykord/*": ["./src/hykord/api/modules/*", "./dist/hykord/api/modules/*"],
            "@dependency/*": ["./src/dependencies/*", "./dist/dependencies/*"],
            "@api/*": ["./src/hykord/api/*", "./dist/hykord/api/*"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths",
                "useRootDirs": true
            }
        ],
        "typeRoots": ["src/types", "node_modules/@types"]
    }
}