{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "allowJs": true,
        "target": "ES2020",
        "lib": ["ESNext", "DOM"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "baseUrl": "./src",
        "jsx": "react",
        "removeComments": true,
        "paths": {
            "@hykord/*": ["hykord/api/modules/*"],
            "@dependency/*": ["dependencies/*"],
            "@api/*": ["hykord/api/*"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ],
        "typeRoots": ["src/types", "node_modules/@types"]
    }
}